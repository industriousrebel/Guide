FROM node:11-alpine

WORKDIR /app

# ENV PATH /app/node_modules/.bin:$PATH

COPY src ./
COPY .env ./
COPY package.json ./
COPY package-lock.json ./
COPY tsconfig.json ./
COPY tslint.json ./
COPY nodemon.json ./

RUN apk add --no-cache python2

CMD npm install -g node-pre-gyp node-gyp typescript ; npm install sqlite3 source ; npm install --no-bin-links ; npm install -g nodemon ; nodemon

EXPOSE 5000
